{% macro select(label, field_name, options, current=None) %}
    {% call field_body(label) %}
        <div class="select">
            <select name="{{ field_name }}">
                {% for value, name in options %}
                    <option {% if current == value %}selected{% endif %} value={{ value }}>{{ name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    {% endcall %}
{% endmacro %}
