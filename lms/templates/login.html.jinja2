{% extends "templates/base.html.jinja2" %}

{% block title %}Please log in{% endblock %}

{% block content %}
    <div id="content">
        <h1>Login</h1>
        <h3>{{ message }}</h3>
        <br/>
        <form action="{{ url }}" method="post">
            <input type="hidden" name="came_from"
                   value="{{ came_from }}"/>
            <div class="input">
                <label for="username">Username</label>
                <input type="text" id="username"
                       name="username"
                       value="{{ username }}"/><br/>
            </div>
            <div class="input">
                <label for="password">Password</label>
                <input type="password" id="password"
                       name="password"/><br/>
            </div>
            <div class="form-controls">
                <button type="submit" name="form.submitted" class="btn">
                    Log In
                </button>
            </div>
        </form>
    </div>
{% endblock %}
