{
  "presets": [
    [
      "@babel/preset-react",
      {
        "runtime": "automatic",
        "importSource": "preact"
      }
    ],

    // Compile JS for browser targets set by `browserslist` key in package.json.
    [
      "@babel/preset-env",
      {
        "bugfixes": true
      }
    ]
  ],
  "env": {
    "development": {
      "presets": [
        [
          "@babel/preset-react",
          {
            "development": true,
            "runtime": "automatic",
            // Use `preact/compat/jsx-dev-runtime` which is an alias for `preact/jsx-runtime`.
            // See https://github.com/preactjs/preact/issues/2974.
            "importSource": "preact/compat"
          }
        ]
      ]
    }
  },
  "plugins": [
    [
      "formatjs",
      {
        // Auto-generate IDs for ICU messages
        "idInterpolationPattern": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ]
  ]
}
